    <ConfigItem Name="Frontend::KIXSidebarBackend###KIXSBDisableSidebar001" Required="0" Valid="0">
        <Description Translatable="1">Sidebar module registration for the agent interface.</Description>
        <Group>KIXSidebarTools</Group>
        <SubGroup>Frontend::Agent::KIXSidebarDisableSidebar</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::KIXSidebar::DisableSidebar</Item>
                <Item Key="Title">Disable Sidebars</Item>

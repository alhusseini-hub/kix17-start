<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="KIXFramework">
    <CVS>$Id$</CVS>

    <ConfigItem Name="Ticket::ServiceTranslation" Required="1" Valid="1">
        <Description Translatable="1">Defines whether the service should be translated in the selection box.</Description>
        <Group>KIX</Group>
        <SubGroup>Core::Ticket</SubGroup>
        <Setting>
            <Option SelectedID="0">
                <Item Key="0" Translatable="1">No</Item>
                <Item Key="1" Translatable="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Ticket::SLATranslation" Required="1" Valid="1">
        <Description Translatable="1">Defines whether the sla should be translated in the selection box.</Description>
        <Group>KIX</Group>
        <SubGroup>Core::Ticket</SubGroup>
        <Setting>
            <Option SelectedID="0">
                <Item Key="0" Translatable="1">No</Item>
                <Item Key="1" Translatable="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>

    <ConfigItem Name="Frontend::Module###AgentArticleCopyMove" Required="0" Valid="0">
        <Description Translatable="1">Frontend module registration for AgentArticleCopyMove.</Description>
        <Group>KIX4OTRS</Group>
        <SubGroup>Frontend::Agent::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Group>admin</Group>
                <Description>Copy, move or delete selected article</Description>
                <Title>Copy, Move or Delete Article</Title>
                <NavBarName></NavBarName>
                <Loader>
                    <JavaScript>Core.Agent.TicketAction.js</JavaScript>
                </Loader>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>

    <ConfigItem Name="Ticket::Frontend::AgentArticleEdit###AutoCompleteTicketID" Required="0" Valid="1">
        <Description Translatable="1">Autocomplete search attributes for ticket id, comma-eparated.</Description>
        <Group>KIX4OTRS</Group>
        <SubGroup>Frontend::Agent::Ticket::ArticleEdit</SubGroup>
        <Setting>
            <Hash>
                <Item Key="SearchAttribute">TicketNumber,Title</Item>
            </Hash>
        </Setting>
    </ConfigItem>

</otrs_config>

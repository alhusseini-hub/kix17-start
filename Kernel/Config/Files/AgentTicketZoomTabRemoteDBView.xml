<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="KIXApplication">
    <CVS>$Id$</CVS>

    <ConfigItem Name="Frontend::Module###AgentTicketZoomTabRemoteDBView" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>KIXSidebarTools</Group>
        <SubGroup>Frontend::Agent::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Description>RemoteDB View</Description>
                <Title>RemoteDB View</Title>
                <NavBarName>Ticket</NavBarName>
                <Loader>
                </Loader>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>

    <ConfigItem Name="Ticket::Frontend::AgentTicketZoomTabRemoteDBView###Permission" Required="1" Valid="1">
        <Description Translatable="1">Required permissions to use the RemoteDB view screen in the agent interface.</Description>
        <Group>KIXSidebarTools</Group>
        <SubGroup>Frontend::Agent::Ticket::ViewTicketZoomTabRemoteDBView</SubGroup>
        <Setting>
            <String Regex="">ro</String>
        </Setting>
    </ConfigItem>


    <ConfigItem Name="AgentTicketZoomBackend###0500-CustomerView" Required="0" Valid="0">
        <Description Translatable="1">Defines parameters for the AgentTicketZoomTab "Customer Data".</Description>
        <Group>KIXSidebarTools</Group>
        <SubGroup>Frontend::Agent::Ticket::AgentTicketZoomTab</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Link">Action=AgentTicketZoomTabRemoteDBView;TicketID=$Param{"TicketID"};Identifier=CustomerView</Item>
                <Item Key="Title">Customer Data</Item>
                <Item Key="Description">Shows information of Customer</Item>
                <Item Key="Block">ContentItem</Item>
                <Item Key="Permission">ro</Item>
                <Item Key="CountMethod">
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>

</otrs_config>

<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="KIXApplication">
    <CVS>$Id$</CVS>

    <ConfigItem Name="Frontend::KIXSidebarBackend###KIXSBSimilarTickets" Required="0" Valid="0">
        <Description Translatable="1">Sidebar module registration for the agent interface.</Description>
        <Group>KIXSidebarTools</Group>
        <SubGroup>Frontend::Agent::KIXSidebarTicket</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Actions">AgentTicket(Phone|Email|Zoom)</Item>
                <Item Key="Module">Kernel::Output::HTML::KIXSidebar::Ticket</Item>
                <Item Key="Title">Similar Tickets</Item>
                <Item Key="Description">Shows similar tickets to current ticket.</Item>
                <Item Key="Prio">0600</Item>
                <Item Key="InitialCollapsed"></Item>
                <Item Key="Identifier">KIXSBSimilarTickets</Item>
                <Item Key="Group"></Item>
                <Item Key="Callback"></Item>
                <Item Key="LinkType">ParentChild</Item>
                <Item Key="MaxResultCount">20</Item>
                <Item Key="MaxResultDisplay">5</Item>
                <Item Key="MaxResultSize"></Item>
                <Item Key="QueryDelay">1000</Item>
                <Item Key="QueryMinLength">1</Item>
                <Item Key="SearchCustomer">0</Item>
                <Item Key="SearchExtended">0</Item>
                <Item Key="SearchQueues"></Item>
                <Item Key="SearchStates">new,open</Item>
                <Item Key="SearchSubject">1</Item>
                <Item Key="SearchTypes"></Item>
                <Item Key="SelectionDisabled">1</Item>
                <Item Key="ShowColumns">TicketNumber,Title</Item>
                <Item Key="TicketIDSearchMaskRegExp">^(?:(?!(AgentTicketPhone$|AgentTicketEmail$)).)*$</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CustomerFrontend::KIXSidebarBackend###KIXSBSimilarTickets" Required="0" Valid="0">
        <Description Translatable="1">Sidebar module registration for the agent interface.</Description>
        <Group>KIXSidebarTools</Group>
        <SubGroup>Frontend::Customer::KIXSidebarTicket</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Actions">CustomerTicket(Message|Zoom)</Item>
                <Item Key="Module">Kernel::Output::HTML::KIXSidebar::Ticket</Item>
                <Item Key="Title">Similar Tickets</Item>
                <Item Key="Description">Shows similar tickets to current ticket.</Item>
                <Item Key="Prio">0600</Item>
                <Item Key="InitialCollapsed"></Item>
                <Item Key="Identifier">KIXSBSimilarTickets</Item>
                <Item Key="Group"></Item>
                <Item Key="Callback"></Item>
                <Item Key="LinkType">ParentChild</Item>
                <Item Key="MaxResultCount">20</Item>
                <Item Key="MaxResultDisplay">5</Item>
                <Item Key="MaxResultSize"></Item>
                <Item Key="QueryDelay">1000</Item>
                <Item Key="QueryMinLength">1</Item>
                <Item Key="SearchCustomer">0</Item>
                <Item Key="SearchExtended">0</Item>
                <Item Key="SearchQueues"></Item>
                <Item Key="SearchStates">new,open</Item>
                <Item Key="SearchSubject">1</Item>
                <Item Key="SearchTypes"></Item>
                <Item Key="SelectionDisabled">1</Item>
                <Item Key="ShowColumns">TicketNumber,Title</Item>
                <Item Key="TicketIDSearchMaskRegExp">^(?:(?!(CustomerTicketMessage$)).)*$</Item>
            </Hash>
        </Setting>
    </ConfigItem>

    <ConfigItem Name="Frontend::Module###KIXSidebarTicketSearchAJAXHandler" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>KIXSidebarTools</Group>
        <SubGroup>Frontend::Agent::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Description>KIXSidebarTicket Search AJAX handler</Description>
                <Title>KIXSidebarTicket Search AJAX handler</Title>
                <NavBarName>Ticket</NavBarName>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CustomerFrontend::Module###KIXSidebarTicketSearchAJAXHandler" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>KIXSidebarTools</Group>
        <SubGroup>Frontend::Customer::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Description>KIXSidebarTicket Search AJAX handler</Description>
                <Title>KIXSidebarTicket Search AJAX handler</Title>
                <NavBarName>Ticket</NavBarName>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>

</otrs_config>
